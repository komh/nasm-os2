;;
;; vtern.mac
;;
;; A couple of macros to simplify the syntax of the ternary logic
;; instructions.
;;

USE: vtern

%imacro vpternlogd 4.nolist
  %define %%imm(a,A,b,B,c,C) (%4)
  %? %1,%2,%3,%%imm(0xaa,0xaa,0xcc,0xcc,0xf0,0xf0)
%endmacro
%imacro vpternlogq 4.nolist
  %define %%imm(a,A,b,B,c,C) (%4)
  %? %1,%2,%3,%%imm(0xaa,0xaa,0xcc,0xcc,0xf0,0xf0)
%endmacro
